<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="9dp"
        android:orientation="vertical"
        android:padding="9dp">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="#212121"
                android:id="@+id/imageview"
                android:src="@drawable/baseline_videocam_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageview"
                android:orientation="vertical"
                android:layout_marginStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_upload_video"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="share your content with large community"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="#212121"
                android:id="@+id/imageview_2"
                android:src="@drawable/baseline_add_to_photos_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageview_2"
                android:orientation="vertical"
                android:layout_marginStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a post"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_publish_post"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share interesting and entertaining posts to your subscribers"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="#212121"
                android:id="@+id/imageview_3"
                android:src="@drawable/baseline_poll_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageview"
                android:orientation="vertical"
                android:layout_marginStart="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Poll"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_release_poll"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create a simple pool with your favourite questions"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#212121"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>